# Simple Rule-Based Chatbot using if-else

def chatbot():
    print("Hello! I am your chatbot. Type 'bye' to exit.")

    while True:
        user_input = input("You: ").lower()   # collect user input in lowercase

        # Exit condition
        if user_input == "bye":
            print("Chatbot: Goodbye! Have a nice day.")
            break

        # Responses
        if "hello" in user_input or "hi" in user_input:
            print("Chatbot: Hi there! How can I help you?")
        elif "how are you" in user_input:
            print("Chatbot: I'm just a program, but I'm doing great! What about you?")
        elif "your name" in user_input:
            print("Chatbot: I'm a simple rule-based chatbot written in Python.")
        elif "help" in user_input:
            print("Chatbot: Sure! I can answer basic questions. Try asking my name, greeting me, or saying bye.")
        elif "weather" in user_input:
            print("Chatbot: I can’t check the weather yet, but you can try Google for the latest update.")
        else:
            print("Chatbot: Sorry, I don’t understand that. Can you rephrase?")

# Run chatbot
chatbot()
